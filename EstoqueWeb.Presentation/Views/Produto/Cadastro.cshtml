@* definindo a classe de modelo de dados utilizada nesta pagina *@
@model EstoqueWeb.Presentation.Models.ProdutoCadastroViewModel

<h5>Cadastro de Produto</h5>
<p>
    Preencha os campos para criar um novo produto
</p>
<hr />

@* declarando o formulário *@
@using (Html.BeginForm())
{
    <div class="row g-3">
      <div class="col-md-6">
        <label>Nome:</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        <span class = "text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
      </div>
      <div class="col-md-3">
        <label>Preço:</label>
        @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
        <span class = "text-danger">
            @Html.ValidationMessageFor(model => model.Preco)
        </span>
      </div>
      <div class="col-md-3">
        <label>Quantidade:</label>
        @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
        <span class = "text-danger">
            @Html.ValidationMessageFor(model => model.Quantidade)
        </span>
      </div>
      <div class="col-12">
        <label>Descrição:</label>
        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
        <span class = "text-danger">
            @Html.ValidationMessageFor(model => model.Descricao)
        </span>
      </div>
      <div class="col-md-4">
        <label>Status</label>
        <br />
        @Html.RadioButtonFor(model => model.Ativo, "1")
            <label>ATIVO</label> <br />
        @Html.RadioButtonFor(model => model.Ativo, "2")
            <label>INATIVO</label> <br />
        <span class = "text-danger">
            @Html.ValidationMessageFor(model => model.Ativo)
        </span>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-success">Cadastrar Produto</button>
      </div>
    </div>

    <h5>
        @TempData["Mensagem"]
    </h5>

}
